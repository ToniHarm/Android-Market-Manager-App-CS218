<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Market Managers"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="24dp" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="16dp"> <!-- Added padding for better spacing -->

                    <TextView
                        android:id="@+id/textViewManagerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="John Doe"
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textViewPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="+679 9324373"
                        android:textColor="@color/darkGreen"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textViewDob"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="01-06-1996"
                        android:textColor="@color/darkGreen"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/textViewEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="jdoe@gmail.com"
                        android:textColor="@color/darkGreen"
                        android:textSize="14sp" />

                    <GridLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:columnCount="3"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"> <!-- Adjusted margin -->

                        <Button
                            android:id="@+id/buttonDeregister"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_row="0"
                            android:layout_column="2"
                            android:layout_columnWeight="1"
                            android:backgroundTint="@color/limeGreen"
                            android:text="De-register"
                            android:textColor="@color/white" />
                    </GridLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="16dp"> <!-- Added padding for better spacing -->

                <TextView
                    android:id="@+id/textViewManagerName2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Kyle Doe"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/textViewPhoneNumber2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+679 9324373"
                    android:textColor="@color/darkGreen"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewDob2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="01-06-1996"
                    android:textColor="@color/darkGreen"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textViewEmail2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="jdoe@gmail.com"
                    android:textColor="@color/darkGreen"
                    android:textSize="14sp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="3"
                    android:orientation="horizontal"
                    android:layout_marginTop="16dp"> <!-- Adjusted margin -->

                    <Button
                        android:id="@+id/buttonDeregiste2r"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_row="0"
                        android:layout_column="2"
                        android:layout_columnWeight="1"
                        android:backgroundTint="@color/limeGreen"
                        android:text="De-register"
                        android:textColor="@color/white" />
                </GridLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</FrameLayout>
