<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <!-- Fragment Title -->
            <TextView
                android:id="@+id/textViewTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Application Approval"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="24dp" />

            <!-- Application List Item Example -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_marginBottom="16dp">
                        <!-- Vendor Name -->
                        <TextView
                            android:id="@+id/textViewVendorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Vendor: John Doe"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginBottom="10dp" />
                        <TextView
                            android:id="@+id/textViewDob"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date of Birth: 01-01-1980"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginBottom="10dp" />
                        <TextView
                            android:id="@+id/textViewPhoneNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="+679 9982734"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:layout_marginBottom="10dp" />
                        <TextView
                            android:id="@+id/textViewStallNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Email: jdoe@gmail.com"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginBottom="10dp" />
                        <!-- Product Type -->
                        <TextView
                            android:id="@+id/textViewProductType"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Product Type: Carrot, Mangoes, Lettuce, Tomato"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:layout_marginBottom="20dp" />

                        <!-- Approval Actions (Approve/Reject) -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <!-- Approve Button -->
                            <Button
                                android:id="@+id/buttonApprove"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Approve"
                                android:backgroundTint="@color/darkGreen"
                                android:layout_marginEnd="10dp" />

                            <!-- Reject Button -->
                            <Button
                                android:id="@+id/buttonReject"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Reject"
                                android:backgroundTint="@color/red" />
                        </LinearLayout>
                    </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
