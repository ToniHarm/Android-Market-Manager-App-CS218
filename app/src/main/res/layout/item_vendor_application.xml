<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Vendor Username -->
        <TextView
            android:id="@+id/textViewUsername"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendor Username"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />

        <!-- Vendor Name -->
        <TextView
            android:id="@+id/textViewVendorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendor Name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:layout_marginBottom="10dp" />

        <!-- Email -->
        <TextView
            android:id="@+id/textViewEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email: jdoe@gmail.com"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="10dp" />

        <!-- Product Type -->
        <TextView
            android:id="@+id/textViewProductType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Type: Carrot, Mangoes, Lettuce, Tomato"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_marginBottom="20dp" />

        <!-- Approval Actions (Approve/Reject) -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <!-- Approve Button -->
            <Button
                android:id="@+id/buttonApprove"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Approve"
                android:backgroundTint="@color/darkGreen"
                android:layout_marginEnd="10dp" />

            <!-- Reject Button -->
            <Button
                android:id="@+id/buttonReject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reject"
                android:backgroundTint="@color/red" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
